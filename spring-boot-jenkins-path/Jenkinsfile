pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                bat 'dir'
                bat ' cd spring-boot-jenkins-path & mvn clean install'
            }
        }
        stage('Test') {
            steps {
                bat 'dir'
                bat 'cd spring-boot-jenkins-path & mvn test'
            }
        }
        stage('Build Docker Image'){
            steps{
                bat 'cd spring-boot-jenkins-path & docker build -t jenkins-aws-proj-jenkinspath .'
            }
        }
        stage('Run Docker Image'){
            steps{
                bat 'cd spring-boot-jenkins-path & docker run -d -p 8082:8083 --name jenkins-aws-proj-jenkinspath jenkins-aws-projpatj'
            }
        }

    }
}